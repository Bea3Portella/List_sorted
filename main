list = [[], []]
value = 0
for i in range(1, 8):
    value = int(input(f'Digite o {i}. valor: '))
    if value % 2 == 0:
        list[0].append(value)
    if value % 2 != 0:
        list[1].append(value)
print('-='*30)
print(f'Os números pares digitados foram {sorted(list[0])}')
print(f'Os números ímpares digitados foram {sorted(list[1])}')